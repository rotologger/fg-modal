{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "fg/fg-modal",
  "version": "1.0",
  "title": "FG Modal",
  "category": "widgets",
  "icon": "block-default",
  "description": "A block which renders a pop-up that appears on a page and disables all other content.",
  "supports": {
    "html": false
  },
  "attributes": {
    "type": {
      "enum": ["modal", "slide-in"],
      "default": "modal",
      "source": "attribute",
      "attribute": "class"
    },
    "position": {
      "type": "string",
      "default": "bottom"
    },
    "showOnPageLoad": {
      "type": "boolean",
      "default": false
    },
    "delay": {
      "type": "number",
      "default": 2000
    },
    "selector": {
      "type": "string"
    },
    "enablePageDependent": {
      "type": "boolean",
      "default": false
    },
    "pageMode": {
      "enum": ["show", "hide"],
      "default": "show"
    },
    "pageIds": {
      "type": "string",
      "default": ""
    },
    "maxWidth": {
      "type": "number",
      "default": 500
    },
    "setCookie": {
      "type": "boolean",
      "default": false
    },
    "expiresAfter": {
      "type": "number",
      "default": 1440
    },
    "reactToOtherCookies": {
      "type": "boolean",
      "default": false
    },
    "otherCookies": {
      "type": "string",
      "default": ""
    },
    "color": {
      "type": "string",
      "default": "#888"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#FFF"
    },
    "backdropColor": {
      "type": "string",
      "default": "rgba(0,0,0,0.5)"
    },
    "timingActive": {
      "type": "boolean",
      "default": false
    },
    "timingMode": {
      "enum": ["show", "hide"],
      "default": "show"
    },
    "date": {
      "type": "string",
      "default": ""
    }
  },
  "textdomain": "fg-modal",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}
